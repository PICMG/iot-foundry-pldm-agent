{
  "agent": {
    "name": "pldm-agent-01",
    "enabled": true,
    "instanceId": 0,
    "role": "both"
  },
  "downstream_transport": {
    "mctp_interface": "mctpserial0",
    "local_eid": 8,
    "peer_eids": [9, 10, 11],
    "serial_device": null,
    "baud_rate": null,
    "enable_diagnostics": false,
    "timeout_ms": 5000,
    "retries": 3,
    "retry_delay_ms": 1000,
    "max_concurrent": 10,
    "supported_types": [
      "base",
      "platform",
      "bios",
      "fru"
    ]
  },
  "endpoints": [
    {
      "eid": 9,
      "name": "sensor-hub",
      "enabled": true,
      "initialize": true,
      "hw_address": "1-1.2:1.0",
      "baud_rate": 115200,
      "flow_control": "hardware",
      "connector_id": "J12",
      "poll": true,
      "poll_interval": 60
    },
    {
      "eid": 10,
      "name": "legacy-controller",
      "enabled": true,
      "initialize": true,
      "serial_device": "/dev/ttyS1",
      "baud_rate": 9600,
      "flow_control": "none",
      "connector_id": "J8",
      "poll": false
    },
    {
      "eid": 11,
      "name": "system-bmc",
      "enabled": true,
      "initialize": false,
      "poll": false
    }
  ],
  "discovery": {
    "enabled": true,
    "interval": 300,
    "eidRange": {
      "start": 8,
      "end": 254
    }
  },
  "logging": {
    "level": "info",
    "output": "both",
    "file": "/var/log/pldm-agent.log",
    "maxSize": 10,
    "maxFiles": 5,
    "pldmMessages": false
  },
  "security": {
    "authentication": false,
    "encryption": false,
    "allowedEids": []
  },
  "performance": {
    "workerThreads": 4,
    "bufferSize": 4096,
    "queueSize": 100
  },
  "eventService": {
    "enabled": false,
    "endpoint": "http://localhost:8080/events",
    "topics": [
      "pldm.sensor",
      "pldm.event",
      "pldm.alert"
    ]
  }
}
